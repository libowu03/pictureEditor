<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:clipToPadding="false"
    android:id="@+id/vClBox"
    android:clipChildren="false">

    <com.image.library.opencv.camera.CameraView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vBtnTake"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/vCamera"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/vCamera"
        app:layout_constraintEnd_toEndOf="@id/vCamera"
        app:layout_constraintTop_toTopOf="@id/vCamera"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vCamera"
        android:id="@+id/vImageCover"/>

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/vVFilter"
        app:layout_constraintTop_toTopOf="@id/vBtnTake"
        app:layout_constraintBottom_toBottomOf="@id/vBtnTake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vBtnTake"
        android:background="@drawable/ic_btn_filter"/>
    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_take_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:id="@+id/vBtnTake"
        android:textColor="#000000"/>
    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vBtnTake"
        android:id="@+id/vVSwitchCamera"
        app:layout_constraintTop_toTopOf="@id/vBtnTake"
        app:layout_constraintBottom_toBottomOf="@id/vBtnTake"
        android:background="@drawable/ic_btn_turn_camera"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_animation_corner"
        android:layout_marginBottom="5dp"
        android:id="@+id/vLlAnimationBox"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/vImageLoading"
            android:src="@drawable/ic_loadding_animation"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainApplyEffect"
            android:layout_marginStart="10dp"
            android:id="@+id/vTvSavingTip"
            android:textColor="@color/white"
            android:textSize="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>