<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="@color/main_text_color" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@color/main_text_color" />
        </shape>
    </item>

    <item android:start="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@color/white" />
        </shape>
    </item>

</layer-list>